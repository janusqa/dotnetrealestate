@model IEnumerable<VillaDto>
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Villas</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-area="Customer" asp-controller="Villa" asp-action="Create" class="btn btn-outline-primary"><i
                    class="bi bi-plus-square-fill"></i> Create</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Occupancy</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var villa in Model)
            {
                <tr>
                    <td>@villa.Name</td>
                    <td>@villa.Occupancy</td>
                    <td>@villa.Rate.ToString("c")</td>
                    <td>
                        <a asp-area="Customer" asp-controller="Villa" asp-action="Update" asp-route-entityId="@villa.Id"
                            class="btn btn-success"><i class="bi bi-pencil-square"></i></a>
                        <a onClick="Delete('/Customer/Villa/Delete/@villa.Id');" class="btn btn-danger"><i
                                class="bi bi-trash-fill"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="~/js/villa.js"></script>
}