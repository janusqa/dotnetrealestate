@model IEnumerable<VillaNumberDto>
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Villas</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-area="Customer" asp-controller="VillaNumber" asp-action="Create" class="btn btn-outline-primary"><i
                    class="bi bi-plus-square-fill"></i> Create</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Villa Name</th>
                <th>Villa Number</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var villaNumber in Model)
            {
                <tr>
                    <td>@villaNumber.VillaId</td>
                    <td>@villaNumber.VillaNo</td>
                    <td>
                        <a asp-area="Customer" asp-controller="VillaNumber" asp-action="Update"
                            asp-route-entityId="@villaNumber.VillaNo" class="btn btn-success"><i
                                class="bi bi-pencil-square"></i></a>
                        <a onClick="Delete('/Customer/Villa/Delete/@villaNumber.VillaNo');" class="btn btn-danger"><i
                                class="bi bi-trash-fill"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="~/js/villanumber.js"></script>
}